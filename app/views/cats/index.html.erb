<section class="section">
    <div class="columns">

        <% @cats.each do |cat| %>
    <div class = "column">
        <% if cat.avatar.attached? %>
            <image src="<%=(url_for(cat.avatar))%>"> 
        <% else %>
            <%=image_tag("defaultcat.png")%>
                <% end %> 
            <p> Name: <%= link_to cat.name, cat %> </p>
            <p> City: <%= cat.city %> </p>
            <p> Bio: <%= cat.bio %> </p>
    </div>
        <% end %>

    </div>        
</section>