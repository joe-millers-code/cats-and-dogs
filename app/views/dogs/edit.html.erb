<h1>Edit a Dog</h1>

<% if flash[:message] %>
    <%= flash[:message] %>
<% end %>

<%= form_for @dog do |f| %>

<%= f.label :age %>
<%= f.number_field :age %>

<%= f.label :city %>
<%= f.text_field :city %>

<%= f.label :breed %>
<%= f.text_field :breed %>

<%= f.label :bio %>
<%= f.text_field :bio %>

<%= f.label :temperament %>
<%= f.text_field :temperament %>

<%= f.label "Profile Photo" %>
<%= f.file_field :avatar %><br>
<%= f.submit "Update Profile" %>
<% end %>
